    <defName>VeryNearsighted</defName>
    <label>very nearsighted</label>
    <iconPath>UI/Icons/Genes/Gene_Nearsighted</iconPath>
    <description>Carriers of this gene have difficulty seeing at a distance. Their shooting accuracy at long ranges is greatly reduced.</description>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>50.1</displayOrderInCategory>
    <statFactors>
      <ShootingAccuracyFactor_Long>0.1</ShootingAccuracyFactor_Long>
      <ShootingAccuracyFactor_Medium>0.25</ShootingAccuracyFactor_Medium>
    </statFactors>
    <biostatMet>3</biostatMet>
    <exclusionTags>
      <li>ShootingAccuracy</li>
    </exclusionTags>
    <symbolPack>
      <prefixSymbols>
        <li><symbol>blind</symbol></li>
        <li><symbol>blur</symbol></li>
        <li><symbol>squint</symbol></li>
        <li><symbol>peek</symbol></li>
